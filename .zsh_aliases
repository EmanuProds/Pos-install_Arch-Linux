### Zsh aliases ###

# Package managers
alias pacinstall="sudo pacman -Syu"
alias install="paru -Syu"
alias update="paru -Syu --noconfirm && flatpak update -y"
alias flatinstall="flatpak install flathub -y"
alias flatupdate="flatpak update -y"
alias uninstall="paru -Rsc --noconfirm"
alias search="paru -Ss"
alias reinstall="pamac reinstall"
alias info="pamac info"

# File managers
alias ..="cd .."
alias ls="exa --icons -la"
alias cat="bat --style=auto"

# Lunarvim text editor
#alias nvim="editar"

# ASDF shortcut
alias lang="asdf"
